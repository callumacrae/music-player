{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "allowJs": true,
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "dist",
    "baseUrl": "."
  },
  "include": ["src/**/*.ts", "./src/**/*.mts"],
  "exclude": ["node_modules"],
  "assets": ["src/**/*.proto"]
}
