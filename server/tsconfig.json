{
  "compilerOptions": {
    "module": "nodenext",
    "esModuleInterop": true,
    "target": "esnext",
    "allowJs": true,
    "strict": true,
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "types": ["node"],
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["*"]
    },
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src"
  },
  "include": ["src/**/*.ts", "./src/**/*.mts"],
  "exclude": ["node_modules"],
  "assets": ["src/**/*.proto"]
}
