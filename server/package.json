{
  "name": "music-player-server",
  "version": "1.0.0",
  "description": "Sensor Monitor",
  "license": "ISC",
  "author": "Matthew Gaffen",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "start": "node --env-file=.env ./dist/server.js",
    "build": "npx rimraf ./dist && mkdir ./dist && tsc && tsc-alias -p tsconfig.json && npm run trpc-api-export && cp ./trpc-api-export/dist/index.d.mts ../client/src/common/api-types.mts",
    "format-fix": "prettier --config .prettierrc --write --ignore-unknown -l .",
    "test": "mocha",
    "trpc-api-export": "tsup --config trpc-api-export/tsup.config.ts && npm run format-fix",
    "watch": "tsc --watch"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.14.2",
    "@grpc/proto-loader": "^0.8.0",
    "@serialport/parser-readline": "^13.0.0",
    "@trpc/server": "^11.8.1",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "json-rpc-2.0": "^1.7.1",
    "serialport": "^13.0.0"
  },
  "devDependencies": {
    "@types/chai": "^5.2.3",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.10.2",
    "chai": "^6.2.2",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "mocha": "^11.7.5",
    "prettier": "^3.7.4",
    "tsc-alias": "^1.8.16",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
